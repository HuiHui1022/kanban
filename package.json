{
  "name": "kanban-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "server:dev": "NODE_OPTIONS='--import tsx' tsx watch server/index.ts",
    "server:build": "rm -rf dist/server && tsc -p server/tsconfig.json && mkdir -p dist/server/db/migrations && cp server/db/migrations/*.sql dist/server/db/migrations/",
    "server:start": "NODE_ENV=production node --experimental-specifier-resolution=node dist/server/index.js",
    "migrate": "node dist/server/db/migrate.js",
    "build:server": "rm -rf dist/server && tsc -p tsconfig.server.json && node scripts/fix-imports.js",
    "start": "node --experimental-specifier-resolution=node dist/server/index.js"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "pinia": "^2.3.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.1",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.10.9",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.3.3",
    "prisma": "^6.1.0",
    "tsx": "^4.7.0",
    "typescript": "~5.6.3",
    "vite": "^6.0.5",
    "vite-plugin-vue-devtools": "^7.6.8",
    "vue-tsc": "^2.1.10"
  }
}
