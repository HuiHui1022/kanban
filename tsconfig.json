{
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2022",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "types": ["vite/client", "node"],
    "outDir": "./dist"
  },
  "include": ["server/**/*.ts", "server/types/**/*.ts"],
  "exclude": ["node_modules"]
}
